{% extends '/views/layouts/main.twig' %}

{% block title %}Доступ к ICS{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>Доступ к ICS</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if logs|length %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                {% set labels = model.attributeLabels() %}
                                {% for attribute,value in model.attributes %}
                                    <th>{{ labels[attribute] }}</th>
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for log in logs %}
                                <tr>
                                    {% for attribute in log.attributes %}
                                        <td>{{ attribute }}</td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <ul class="pagination">
                        {% for i in 1..pages %}
                            <li {% if page == i %}class='disabled'{% endif %}><a
                                        href="{{ this.createUrl('index', {page: i}) }}">{{ i }}</a></li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="alert alert-warning">Нет логов...</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}