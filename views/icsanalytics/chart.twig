{% extends '/views/layouts/main.twig' %}

{% block title %}График доступа к ICS{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>График доступа к ICS</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-default" href="{{ this.createUrl('chart') }}">По дням</a>
                <a class="btn btn-default" href="{{ this.createUrl('chart', {type: 'hour'}) }}">По часам</a>
                <a class="btn btn-default" href="{{ this.createUrl('chart', {by_groups: true}) }}">По группам и дням</a>
                <a class="btn btn-default" href="{{ this.createUrl('chart', {type: 'hour', by_groups: true}) }}">По
                    группам и часам</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ void(this.widget('highcharts.HighstockWidget', {
                'options': {
                legend: {enabled: true},
                'title': {'text': ''},
                'xAxis': {
                type: 'datetime',
                title: {
                text: 'Дата'
                }
                },
                yAxis: {
                title: {
                text: 'Количество запросов'
                },
                min: 0
                },
                series: series
                }
                })) }}
            </div>
        </div>
    </div>
    {{ void(App.clientScript.registerScript('highcharts-utc', "
Highcharts.setOptions({
                global : {
                    useUTC : false
                }
            });
            ")) }}
{% endblock %}