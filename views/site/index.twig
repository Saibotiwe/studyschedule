{% extends '/views/layouts/main.twig' %}

{% block title %}Мои группы{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {% include '/views/particle/notice.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if groups|length %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Номер группы</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for group in groups %}
                            <tr>
                                <td>
                                    {{ group.number }}
                                </td>
                                <td>
                                    <a href="{{ this.createUrl('group/schedule', {id: group.number}) }}"
                                       class="btn btn-sm btn-default">
                                        <span class="glyphicon glyphicon-calendar"></span> Расписание
                                    </a>
                                    <a href="{{ this.createUrl('group/replaces', {id: group.number}) }}"
                                       class="btn btn-sm btn-default">
                                        <span class="glyphicon glyphicon-indent-left"></span> Замены
                                    </a>
                                    <a href="{{ this.createUrl('group/moderators', {id: group.number}) }}"
                                       class="btn btn-sm btn-default">
                                        <span class="glyphicon glyphicon-user"></span> Модераторы
                                    </a>
                                    <a href="{{ this.createUrl('group/settings', {id: group.number}) }}"
                                       class="btn btn-sm btn-default">
                                        <span class="glyphicon glyphicon-cog"></span> Настройки
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-warning">У вас нет групп</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}