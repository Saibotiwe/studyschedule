{% extends '/views/layouts/main.twig' %}

{% block title %}Списки звонков{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>Списки звонков</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% include '/views/particle/notice.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ this.createUrl('create') }}" class="btn btn-default pull-right"><span
                            class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if call_lists|length %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                {% set labels = model.attributeLabels() %}
                                {% for attribute,value in model.attributes %}
                                    <th>{{ labels[attribute] }}</th>
                                {% endfor %}
                                <th>Действия</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for call_list in call_lists %}
                                <tr>
                                    {% for attribute in call_list.attributes %}
                                        <td>{{ attribute }}</td>
                                    {% endfor %}
                                    <td>
                                        <a href="{{ this.createUrl('calllistselements/index', {list_id: call_list.id}) }}"
                                           class="btn btn-sm btn-default">
                                            <span about="" class="glyphicon glyphicon-wrench"></span>
                                        </a>
                                        <a href="{{ this.createUrl('update', {id: call_list.id}) }}"
                                           class="btn btn-sm btn-default">
                                            <span about="" class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        <a href="{{ this.createUrl('delete', {id: call_list.id}) }}"
                                           class="btn btn-sm btn-danger">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-warning">Нет списков звонков</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}