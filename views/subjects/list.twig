{% extends '/views/layouts/main.twig' %}

{% block title %}Предметы{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>Предметы</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% include '/views/particle/notice.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ this.createUrl('create') }}" class="btn btn-default pull-right"><span
                            class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if subjects|length %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            {% set labels = model.attributeLabels() %}
                            {% for attribute,value in model.attributes %}
                                <th>{{ labels[attribute] }}</th>
                            {% endfor %}
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for subject in subjects %}
                            <tr>
                                {% for attribute,value in subject.attributes %}
                                    {% if attribute != 'owner_id' %}
                                        <td>{{ value }}</td>
                                    {% else %}
                                        <td>{% if value %}{{ subject.owner.username }}{% else %}-Нет-{% endif %}</td>
                                    {% endif %}
                                {% endfor %}
                                <td>
                                    {% if App.user.checkAccess('admin') or subject['owner_id'] and App.user.id == subject.owner_id %}
                                        <a href="{{ this.createUrl('update', {id: subject.id}) }}"
                                           class="btn btn-sm btn-default"><span
                                                    class="glyphicon glyphicon-pencil"></span></a>
                                        <a href="{{ this.createUrl('delete', {id: subject.id}) }}"
                                           class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                    {% else %}
                                        Нет доступа
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-warning">Нет предметов</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}