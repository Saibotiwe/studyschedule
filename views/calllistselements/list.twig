{% extends '/views/layouts/main.twig' %}

{% block title %}Заполнение списка звонков {{ call_list.name }}{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {% include '/views/particle/notice.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ this.createUrl('create', {list_id: App.request.param('list_id')}) }}"
                   class="btn btn-default pull-right">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1>Заполнение списка звонков "<b>{{ call_list.name }}</b>"</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if call_list_elements|length %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            {% set labels = model.attributeLabels() %}
                            {% for attribute,value in model.attributes %}
                                {% if attribute != 'call_list_id' %}
                                    <th>{{ labels[attribute] }}</th>
                                {% endif %}
                            {% endfor %}
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for call_list_element in call_list_elements %}
                            <tr>
                                {% for attribute,value in call_list_element.attributes %}
                                    {% if attribute != 'call_list_id' %}
                                        <td>{{ value }}</td>
                                    {% endif %}
                                {% endfor %}
                                <td>
                                    <a href="{{ this.createUrl('update', {list_id: call_list_element.call_list.id, id: call_list_element.id}) }}"
                                       class="btn btn-sm btn-default">
                                        <span about="" class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a href="{{ this.createUrl('delete', {id: call_list_element.id}) }}"
                                       class="btn btn-sm btn-danger">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-warning">У данного списка нет элементов</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}