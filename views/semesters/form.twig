{% extends '/views/layouts/main.twig' %}
{% if model.isNewRecord %}
    {% set title = 'Добавление семестра' %}
{% else %}
    {% set title = 'Редактирование семестра ' ~ model.name %}
{% endif %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                {% include '/views/particle/notice.twig' %}
                {% set form = this.beginWidget('CActiveForm',
                {
                'errorMessageCssClass': 'alert alert-danger'
                }) %}
                <div class="form-group text-center">
                    <h1>{{ title }}</h1>
                </div>
                {% include '/views/particle/notice.twig' %}
                <div class="form-group">
                    {{ form.label(model, 'name') }}
                    {{ form.textField(model, 'name', {'class': 'form-control', 'placeholder': model.attributeLabels().name }) }}
                </div>
                {{ form.error(model, 'name') }}
                <div class="form-group">
                    {{ form.label(model, 'week_number') }}
                    {{ form.dropDownList(model, 'week_number', {1: 1, 2:2}, {'class': 'form-control', 'placeholder': model.attributeLabels().week_number }) }}
                </div>
                {{ form.error(model, 'week_number') }}
                <div class="form-group">
                    {{ form.label(model, 'start_date') }}
                    {{ form.dateField(model, 'start_date', {'class': 'form-control', 'placeholder': model.attributeLabels().start_date }) }}
                </div>
                {{ form.error(model, 'start_date') }}
                <div class="form-group">
                    {{ form.label(model, 'end_date') }}
                    {{ form.dateField(model, 'end_date', {'class': 'form-control', 'placeholder': model.attributeLabels().end_date }) }}
                </div>
                {{ form.error(model, 'end_date') }}
                <div class="form-group">
                    {{ form.label(model, 'call_list') }}
                    {{ form.dropDownList(model, 'call_list', call_lists, {'class': 'form-control', 'placeholder': model.attributeLabels().call_list, 'empty': '-' }) }}
                </div>
                {{ form.error(model, 'call_list') }}
                <div class="form-group">
                    {{ form.label(model, 'call_list_short') }}
                    {{ form.dropDownList(model, 'call_list_short', call_lists, {'class': 'form-control', 'placeholder': model.attributeLabels().call_list_short, 'empty': '-' }) }}
                </div>
                {{ form.error(model, 'call_list_short') }}
                <div class="form-group text-center">
                    {{ C.Html.submitButton(model.isNewRecord ? 'Создать' : 'Сохранить', {'class': 'btn btn-success'}) }}
                </div>
                {{ void(this.endWidget()) }}
            </div>
        </div>
    </div>
{% endblock %}