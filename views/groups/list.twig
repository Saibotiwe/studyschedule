{% extends '/views/layouts/main.twig' %}

{% block title %}Группы{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>Группы</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% include '/views/particle/notice.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ this.createUrl('create') }}" class="btn btn-default pull-right">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if groups|length %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                {% set labels = model.attributeLabels() %}
                                {% for attribute,value in model.attributes %}
                                    <th>{{ labels[attribute] }}</th>
                                {% endfor %}
                                <th>Действия</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for group in groups %}
                                <tr>
                                    {% for attribute,value in group.attributes %}
                                        {% if attribute != 'owner_id' %}
                                            <td>{{ value }}</td>
                                        {% else %}
                                            <td>{% if value %}{{ group.owner.username }}{% else %}-Нет-{% endif %}</td>
                                        {% endif %}
                                    {% endfor %}
                                    <td>
                                        <a href="{{ this.createUrl('group/schedule', {id: group.number}) }}"
                                           class="btn btn-sm btn-default">
                                            <span class="glyphicon glyphicon-calendar"></span> Расписание
                                        </a>
                                        <a href="{{ this.createUrl('group/replaces', {id: group.number}) }}"
                                           class="btn btn-sm btn-default">
                                            <span class="glyphicon glyphicon-indent-left"></span> Замены
                                        </a>
                                        <a href="{{ this.createUrl('group/moderators', {id: group.number}) }}"
                                           class="btn btn-sm btn-default">
                                            <span class="glyphicon glyphicon-user"></span> Модераторы
                                        </a>
                                        <a href="{{ this.createUrl('group/settings', {id: group.number}) }}"
                                           class="btn btn-sm btn-default">
                                            <span class="glyphicon glyphicon-cog"></span> Настройки
                                        </a>
                                        <a href="{{ this.createUrl('update', {id: group.id}) }}"
                                           class="btn btn-sm btn-default">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        <a href="{{ this.createUrl('delete', {id: group.id}) }}"
                                           class="btn btn-sm btn-danger">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-warning">Нет групп</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}