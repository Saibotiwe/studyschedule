{% extends '/views/layouts/main.twig' %}

{% block title %}Пользователи{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>Пользователи</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% include '/views/particle/notice.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ this.createUrl('create') }}" class="btn btn-default pull-right"><span
                            class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if users|length %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                {% set labels = model.attributeLabels() %}
                                {% for attribute,value in model.attributes %}
                                    <th>{{ labels[attribute] }}</th>
                                {% endfor %}
                                <th>Права</th>
                                <th>Действия</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    {% for attribute in user.attributes %}
                                        <td>{{ attribute }}</td>
                                    {% endfor %}
                                    <td>
                                        {{ users_rights[user.id]|keys|join(',') }}
                                    </td>
                                    <td>
                                        <a href="{{ this.createUrl('update', {id: user.id}) }}"
                                           class="btn btn-sm btn-default"><span
                                                    class="glyphicon glyphicon-pencil"></span></a>
                                        <a href="{{ this.createUrl('delete', {id: user.id}) }}"
                                           class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-warning">Нет пользователей</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}