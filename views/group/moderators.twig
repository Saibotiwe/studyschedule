{% extends '/views/layouts/main.twig' %}

{% block title %}Модераторы{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {% include '/views/particle/notice.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1>Модераторы</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if members|length %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Пользователь</th>
                            <th>Почта</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for member in members %}
                            <tr>
                                <td>
                                    {{ member.user.username }}
                                </td>
                                <td>
                                    {{ member.user.email }}
                                </td>
                                <td>
                                    <a href="{{ this.createUrl('deleteModerator', {id: group.number, member_id: member.id}) }}"
                                       class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-warning">Нет модераторов</div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>Приглашения</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ this.createUrl('createInvite', {id: group.number}) }}"
                   class="btn btn-default pull-right"><span
                            class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if invites|length %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Почта</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for invite in invites %}
                            <tr>
                                <td>
                                    {{ invite.email }}
                                </td>
                                <td>
                                    {% if invite.status == 0 %}
                                        Приглашение отправлено
                                    {% elseif invite.status == 1 %}
                                        Приглашение принято
                                    {% elseif invite.status == 2 %}
                                        Приглашение отклонено
                                    {% endif %}
                                </td>
                                <td>
                                    {% if invite.status == 0 %}
                                        <a href="{{ this.createUrl('deleteInvite', {id: group.number, invite_id: invite.id}) }}"
                                           class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                                    {% else %}
                                        -
                                    {% endif %}
                                    {#
                                    <a href="{{ this.createUrl('group/schedule', {id: group.number}) }}"
                                       class="btn btn-sm btn-default">Расписание</a>
                                    <a href="{{ this.createUrl('delete', {id: group.id}) }}"
                                       class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span></a>#}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-warning">Нет приглашений</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}